[push]
	default = simple
[alias]
	ac = !git add -A && git commit
	alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
	amend = !git add -A && git commit --amend --no-edit
	d = difftool
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[user]
	name = Chris Paterson
[credential]
	helper = store
