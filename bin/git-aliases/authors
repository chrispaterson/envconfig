#!/bin/bash

authors=$(git log --pretty="%ae" | sort -u)

for author in $authors; do
  stats=$(git log --author="$author" --pretty=tformat: --numstat | awk '{ add += $1; subs += $2; loc += $1 + $2 } END { printf "%s added [%s] removed [%s] total [%s]\n", loc, add, subs, loc }' -)
  echo "$stats $author"
done
